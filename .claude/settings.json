{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(afplay:*)",
      "Bash(cargo audit:*)",
      "Bash(cargo:*)",
      "Bash(cat:*)",
      "Bash(chmod +x:*)",
      "Bash(chmod 644:*)",
      "Bash(chmod 755:*)",
      "Bash(cp:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git push:*)",
      "Bash(git status:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm audit:*)",
      "Bash(pwd:*)",
      "Bash(rm:*)",
      "Bash(tail:*)",
      "Bash(timeout 10 cargo leptos watch)",
      "Bash(typos:*)",
      "WebFetch(domain:crates.io)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:tailwindcss.com)"
    ],
    "deny": [
      "Bash(chown:*)",
      "Bash(chmod 777:*)",
      "Bash(curl * | sh)",
      "Bash(dd:*)",
      "Bash(git clean -f:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(kill -9:*)",
      "Bash(killall:*)",
      "Bash(mkfs:*)",
      "Bash(rm -r:*)",
      "Bash(rm -rf *)",
      "Bash(rm -rf:*)",
      "Bash(rm --recursive:*)",
      "Bash(shred:*)",
      "Bash(su:*)",
      "Bash(sudo:*)",
      "Bash(wget * | sh)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ./bash-command-log.txt"
          }
        ]
      }
    ],
    "PostResponse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Ping.aiff"
          }
        ]
      }
    ]
  }
}